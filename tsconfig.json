        "target": "es2020",
        "module": "ES2020",
        "outDir": "./dist",
        "types": ["node"],
        "lib": ["ES2020", "DOM"],
        "strict": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "plugins": [
        {
            "transform": "ts-nameof",
            "type": "config"
        }
    ]
}
  